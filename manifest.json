{
    "manifest_version": 3,
    "name": "AI 双语助手",
    "name__en": "AI Bilingual Assistant",
    "version": "1.2.0",
    "description": "网页翻译助手 - 选中翻译、一键翻译全文，智能保留代码格式",
    "description__en": "Web translation assistant - Select to translate, one-click full page translation, smart code preservation",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://chat.openai.com/*",
                "https://chatgpt.com/*"
            ],
            "js": [
                "lib/translator.js",
                "content/chatgpt-handler.js",
                "content/content.js"
            ],
            "css": [
                "content/content.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://gemini.google.com/*"
            ],
            "js": [
                "lib/translator.js",
                "content/gemini-handler.js",
                "content/content.js"
            ],
            "css": [
                "content/content.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://claude.ai/*"
            ],
            "js": [
                "lib/translator.js",
                "content/claude-handler.js",
                "content/content.js"
            ],
            "css": [
                "content/content.css"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "<all_urls>"
            ],
            "exclude_matches": [
                "https://chat.openai.com/*",
                "https://chatgpt.com/*",
                "https://gemini.google.com/*",
                "https://claude.ai/*"
            ],
            "js": [
                "lib/translator.js",
                "content/generic-handler.js",
                "content/content.js"
            ],
            "css": [
                "content/content.css"
            ],
            "run_at": "document_end"
        }
    ],
    "options_page": "options/options.html",
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}